{% extends 'base.html.twig' %}

{% block title %}Green Goodies - Connexion{% endblock %}

{% block body %}
    <div class="login-form-container">
        <div class="login-form-img">
            <img src="{{ asset('images/3d56d2aa94c157b36fcfc7d9f2db7fa3.jpg') }}" alt="Image d'illustration de branches d'arbre fleuri">
        </div>

        <form method="post">
            <h2>Connexion</h2>

            {% if error %}
                <div class="error-form">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="login-form-line">
                <label for="inputEmail">Adresse email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>

            <div class="login-form-line">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="login-form-line">
                <button type="submit">Se connecter</button>
            </div>

            <div class="registration-link">
                <a href="{{ path('registration.show') }}">Pas encore de compte ? S'inscrire</a>
            </div>
        </form>
    </div>
{% endblock %}
